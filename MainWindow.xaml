<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="350" Width="400">
    <Grid>
        <TextBox x:Name="FirstNumberTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SecondNumberTextBox" HorizontalAlignment="Left" Margin="140,10,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Content="Сложение" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="75" Click="AddButton_Click"/>
        <Button Content="Вычитание" HorizontalAlignment="Left" Margin="90,50,0,0" VerticalAlignment="Top" Width="75" Click="SubtractButton_Click"/>
        <Button Content="Умножение" HorizontalAlignment="Left" Margin="170,50,0,0" VerticalAlignment="Top" Width="75" Click="MultiplyButton_Click"/>
        <Button Content="Деление" HorizontalAlignment="Left" Margin="250,50,0,0" VerticalAlignment="Top" Width="75" Click="DivideButton_Click"/>

        <Label x:Name="ResultLabel" Content="Результат: " HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="360" Height="25"/>
    </Grid>
</Window>
